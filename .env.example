# Copia este archivo a .env y completa los valores
# Región: EE.UU. Este (Ohio) us-east-2
AWS_REGION=us-east-2

# Bucket de S3 donde se guardarán PDFs y QRs
AWS_S3_BUCKET=mis-pdfs-proyecto
# (Alias soportado)
# AWS_BUCKET_NAME=mis-pdfs-proyecto

# Prefijo dentro del bucket (carpeta lógica)
AWS_S3_PREFIX=uploads

# Opcional: credenciales; en Render usa Variables de Entorno o Roles
# NUNCA subas credenciales reales a Git
# AWS_ACCESS_KEY_ID=YOUR_ACCESS_KEY_ID
# AWS_SECRET_ACCESS_KEY=YOUR_SECRET_ACCESS_KEY

# Config app
# Si pones 0 o un número negativo, los enlaces NO expiran
TOKEN_TTL_DAYS=365
MAX_FILE_MB=10
PURGE_INTERVAL_MINUTES=360
ADMIN_USER=
ADMIN_PASS=
BASE_URL=
UPLOAD_DIR=uploads
